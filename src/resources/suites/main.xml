<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="instagram" parallel="classes" thread-count="1">

    <test name="SmokeSuiteTest">
        <parameter name="browserName" value="firefox"/>
        <groups>
            <run>
                <include name="instagram"></include>
            </run>
        </groups>

        <packages>
            <package name="com.instagram.scripts.*"></package>
        </packages>
    </test>
</suite>